package josemora_examen1_2025_ejercicion2;

import java.util.Scanner;

public class JoseMora_Examen1_2025_EjercicioN2 {

    public static void main(String[] args) {
        
        int x;
        int y;   
        
        Scanner sc = new Scanner(System.in);
        
        System.out.println("Porfavor ingrese el numero de filas:");
            x = sc.nextInt();
            
        System.out.println("Porfavor ingrese el numero de columnas:");
            y = sc.nextInt();
            
            int Matriz[][] = new int [x][y];
            
        for (int i = 0; i < x; i++) {
            for (int j = 0; j < y; j++) {
            
                Matriz [i][j] = (int) (23 * Math.pow(i, 4) * 20 * Math.pow(j, 3) - 3);
                
            }
        }
        
        System.out.println(" ");
        
        for (int i = 0; i < Matriz.length; i++) {
            for (int j = 0; j < Matriz[i].length; j++) {
            
                System.out.print("( " + Matriz[i][j] + " )");
            }         
        System.out.println(" ");
            
        }
    }
}
